                        <option value="Patient">Patient</option>
                        <option value="Partner">Partner</option>
                        <option value="Other">Other</option>
                    </select>
                    <input type="text" id="spermSourceOther" name="spermSourceOther" class="hidden" placeholder="Specify other">
                </div>
            </div>
