                    <input type="text" id="partnerName" name="partnerName">
                </div>
                <div>
                    <label for="partnerDOB"><span class="bold">DOB:</span></label>
                    <input type="date" id="partnerDOB" name="partnerDOB" onchange="calculatePartnerAge()">
                </div>
